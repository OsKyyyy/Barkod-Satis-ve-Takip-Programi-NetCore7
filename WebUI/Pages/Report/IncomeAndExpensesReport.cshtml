@page
@using System.Globalization
@model WebUI.Pages.Report.IncomeAndExpensesReportModel
@{
    ViewData["Title"] = "Gelir-Gider Raporları";
}
@section _Head
{
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />    
    <link href="~/assets/plugins/custom/vis-timeline/vis-timeline.bundle.css" rel="stylesheet" type="text/css" />
}
<div class="app-main flex-column flex-row-fluid " id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 mb-10">
            <div id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                        Gelir-Gider Raporları
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            Rapor
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">
                            Gelir-Gider Raporları
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content  flex-column-fluid ">
            <div id="kt_app_content_container" class="app-container  container-xxl ">

                <div class="row gy-5 g-xl-10">

                    <div class="col-md-4 col-xl-4 mb-xxl-10">
                        
                        <div class="card overflow-hidden h-md-50 mb-5 mb-xl-10">
                            <div class="card-body d-flex justify-content-between flex-column px-0 pb-0">
                                <div class="mb-4 px-9">
                                    <div class="d-flex align-items-center mb-2" id="monthlyEstimatedEarningCardBody">
                                        <span class="fs-4 fw-semibold text-gray-500 align-self-start me-1>">₺</span>
                                        <span class="fs-2hx fw-bold me-2 lh-1" id="monthlyEstimatedEarningInput">0.00</span>                                       
                                    </div>
                                    <span class="fs-6 fw-semibold text-gray-500">Aylık Tahmini Kazanç</span>
                                </div>
                                <div id="MonthlyEstimatedEarningChart" class="min-h-auto" style="height: 125px"></div>
                            </div>
                        </div>
                        
                        <div class="card overflow-hidden h-md-50 mb-5 mb-xl-10">
                            <div class="card-body d-flex justify-content-between flex-column px-0 pb-0">
                                <div class="mb-4 px-9">
                                    <div class="d-flex align-items-center mb-2" id="monthlySalesIncomeCardBody">
                                        <span class="fs-4 fw-semibold text-gray-500 align-self-start me-1>">₺</span>
                                        <span class="fs-2hx fw-bold text-success me-2 lh-1" id="monthlySalesIncomeInput">0.00</span>
                                    </div>
                                    <span class="fs-6 fw-semibold text-gray-500">Aylık Satış Geliri</span>
                                </div>
                                <div id="MonthlySalesIncomeChart" class="min-h-auto" style="height: 125px"></div>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-4 col-xl-4 mb-xxl-10">

                        <div class="card overflow-hidden h-md-50 mb-5 mb-xl-10">
                            <div class="card-body d-flex justify-content-between flex-column px-0 pb-0">
                                <div class="mb-4 px-9">
                                    <div class="d-flex align-items-center mb-2" id="monthlyEstimatedIncomeCardBody">
                                        <span class="fs-4 fw-semibold text-gray-500 align-self-start me-1>">₺</span>
                                        <span class="fs-2hx fw-bold text-success me-2 lh-1" id="monthlyEstimatedIncomeInput">0.00</span>
                                    </div>
                                    <span class="fs-6 fw-semibold text-gray-500">Aylık Tahmini Gelir</span>
                                </div>
                                <div id="MonthlyEstimatedIncomeChart" class="min-h-auto" style="height: 125px"></div>
                            </div>
                        </div>

                        <div class="card overflow-hidden h-md-50 mb-5 mb-xl-10">
                            <div class="card-body d-flex justify-content-between flex-column px-0 pb-0">
                                <div class="mb-4 px-9">
                                    <div class="d-flex align-items-center mb-2" id="monthlyExternalIncomeCardBody">
                                        <span class="fs-4 fw-semibold text-gray-500 align-self-start me-1>">₺</span>
                                        <span class="fs-2hx fw-bold text-success me-2 lh-1" id="monthlyExternalIncomeInput">0.00</span>
                                    </div>
                                    <span class="fs-6 fw-semibold text-gray-500">Aylık Harici Gelir</span>
                                </div>
                                <div id="MonthlyExternalIncomeChart" class="min-h-auto" style="height: 125px"></div>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-4 col-xl-4 mb-xxl-10">

                        <div class="card overflow-hidden h-md-50 mb-5 mb-xl-10">
                            <div class="card-body d-flex justify-content-between flex-column px-0 pb-0">
                                <div class="mb-4 px-9">
                                    <div class="d-flex align-items-center mb-2" id="monthlyEstimatedExpensesCardBody">
                                        <span class="fs-4 fw-semibold text-gray-500 align-self-start me-1>">₺</span>
                                        <span class="fs-2hx fw-bold text-danger me-2 lh-1" id="monthlyEstimatedExpensesInput">0.00</span>
                                    </div>
                                    <span class="fs-6 fw-semibold text-gray-500">Aylık Tahmini Gider</span>
                                </div>
                                <div id="MonthlyEstimatedExpensesChart" class="min-h-auto" style="height: 125px"></div>
                            </div>
                        </div>

                        <div class="card overflow-hidden h-md-50 mb-5 mb-xl-10">
                            <div class="card-body d-flex justify-content-between flex-column px-0 pb-0">
                                <div class="mb-4 px-9">
                                    <div class="d-flex align-items-center mb-2" id="monthlyExternalExpensesCardBody">
                                        <span class="fs-4 fw-semibold text-gray-500 align-self-start me-1>">₺</span>
                                        <span class="fs-2hx fw-bold text-danger me-2 lh-1" id="monthlyExternalExpensesInput">0.00</span>
                                    </div>
                                    <span class="fs-6 fw-semibold text-gray-500">Aylık Harici Gider</span>
                                </div>
                                <div id="MonthlyExternalExpensesChart" class="min-h-auto" style="height: 125px"></div>
                            </div>
                        </div>

                    </div>
                    
                </div>
                <div class="row gy-5 g-xl-10 mt-20">
                    <div class="card card-flush h-md-100">
                        <div class="card-header pt-7">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label fw-bold text-gray-900">Gelir - Gider Grafiği</span>

                                <span class="text-gray-500 pt-2 fw-semibold fs-6">Aylık Gelir - Gider - Kazanç Grafik Gösterimi</span>
                            </h3>
                        </div>
                        <div class="card-body pt-5">
                            <div id="kt_charts_widget_13_chart" class="w-100 h-325px"></div>
                        </div>
                    </div>
                </div>
             </div>
        </div>
    </div>
</div>
<div class="d-none">
    <input asp-for="ToastrError" />
</div>
<div class="d-none">
    <input asp-for="ToastrSuccess" />
</div>

<form class="form d-flex flex-column flex-lg-row" method="post">
    <button type="submit" hidden></button>
</form>

@section _Foot
{
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/assets/js/pages/report/report.js"></script>
    <script src="~/assets/js/pages/report/incomeAndExpensesRequest.js"></script>
    <script src="~/lib/index.js"></script>
    <script src="~/lib/themes/Animated.js"></script>
    <script src="~/lib/xy.js"></script>
}
