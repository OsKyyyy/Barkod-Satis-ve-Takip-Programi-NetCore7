@page
@using System.Globalization
@model WebUI.Pages.Report.IncomeAndExpensesReportModel
@{
    ViewData["Title"] = "Gelir-Gider Raporları";
}
@section _Head
    {
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}
<div class="app-main flex-column flex-row-fluid " id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 mb-10">
            <div id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                        Gelir-Gider Raporları
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            Rapor
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">
                            Gelir-Gider Raporları
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content  flex-column-fluid ">
            <div id="kt_app_content_container" class="app-container  container-xxl ">
                <div class="row gy-5 g-xl-10">

                    <div class="col-sm-6 col-xl-4 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column" id="monthlyEstimatedEarningCardBody">
                                <div class="m-0">
                                    <i class="ki-duotone ki-compass fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x lh-1 ls-n2" id="monthlyEstimatedEarningInput">0.00 &#8378;</span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-4 text-gray-500">
                                            Aylık Tahmini Kazanç
                                        </span>
                                    </div>
                                </div>                      
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-xl-4 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column" id="monthlyEstimatedIncomeCardBody">
                                <div class="m-0">
                                    <i class="ki-duotone ki-compass fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-success lh-1 ls-n2" id="monthlyEstimatedIncomeInput">0.00 &#8378;</span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-4 text-gray-500">
                                            Aylık Tahmini Gelir
                                        </span>
                                    </div>
                                </div>                               
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-xl-4 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column" id="monthlyEstimatedExpensesCardBody">
                                <div class="m-0">
                                    <i class="ki-duotone ki-compass fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-danger lh-1 ls-n2"id="monthlyEstimatedExpensesInput">0.00 &#8378;</span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-4 text-gray-500">
                                            Aylık Tahmini Gider
                                        </span>
                                    </div>
                                </div>                          
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-xl-4 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column" id="monthlySalesIncomeCardBody">
                                <div class="m-0">
                                    <i class="ki-duotone ki-compass fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-success lh-1 ls-n2" id="monthlySalesIncomeInput">0.00 &#8378;</span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-4 text-gray-500">
                                            Aylık Satış Geliri
                                        </span>
                                    </div>
                                </div>                           
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-xl-4 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column" id="monthlyExternalIncomeCardBody">
                                <div class="m-0">
                                    <i class="ki-duotone ki-compass fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-success lh-1 ls-n2" id="monthlyExternalIncomeInput">0.00 &#8378;</span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-4 text-gray-500">
                                            Aylık Harici Gelir
                                        </span>
                                    </div>
                                </div>                                
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-xl-4 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column" id="monthlyExternalExpensesCardBody">
                                <div class="m-0">
                                    <i class="ki-duotone ki-compass fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-danger lh-1 ls-n2" id="monthlyExternalExpensesInput">0.00 &#8378;</span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-4 text-gray-500">
                                            Aylık Harici Gider
                                        </span>
                                    </div>
                                </div>                               
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="d-none">
    <input asp-for="ToastrError" />
</div>
<div class="d-none">
    <input asp-for="ToastrSuccess" />
</div>

<form class="form d-flex flex-column flex-lg-row" method="post">
    <button type="submit" hidden></button>
</form>

@section _Foot
    {
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/assets/js/pages/report/report.js"></script>
    <script src="~/assets/js/pages/report/incomeAndExpensesRequest.js"></script>
}
