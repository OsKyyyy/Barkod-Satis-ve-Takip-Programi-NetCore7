@page
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model WebUI.Pages.Product.AddModel
@{
    ViewData["Title"] = "Ürün Ekle";
}

<div class="app-main flex-column flex-row-fluid " id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 mb-10">
            <div id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                        Ürün Ekle
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            Sayfalar
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">
                            Ürün İşlemleri
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content  flex-column-fluid ">
            <div id="kt_app_content_container" class="app-container  container-xxl ">
                <div class="card mb-5 mb-xl-10">
                    <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
                        <div class="card-title m-0">
                            <h3 class="fw-bold m-0">Ürün Bilgileri</h3>
                        </div>
                    </div>

                    <div id="kt_account_settings_profile_details" class="collapse show">
                        <form class="form" method="post" asp-page-handler="Add" enctype="multipart/form-data">
                            <div class="card-body border-top p-9">

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Ürün Adı</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="AddRequestModel.Name" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="AddRequestModel.Name"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Kategori</label>

                                    <div class="col-lg-8 fv-row">
                                        <select asp-for="AddRequestModel.CategoryId" asp-items="Model.Options" class="form-control form-control-lg form-control mb-3 mb-lg-0"></select>
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="AddRequestModel.CategoryId"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Alış Fiyatı</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="AddRequestModel.PurchasePrice" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="AddRequestModel.PurchasePrice"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Satış Fiyatı</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="AddRequestModel.SalePrice" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="AddRequestModel.SalePrice"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Barkod</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="AddRequestModel.Barcode" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="AddRequestModel.Barcode"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Stok</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="AddRequestModel.Stock" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="AddRequestModel.Stock"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label fw-semibold fs-6">Fotoğraf</label>

                                    <div class="col-lg-8 fv-row">
                                        <div class="image-input image-input-outline" data-kt-image-input="true" style="background-image: url(@Configuration.GetValue(typeof(string),"BaseUrl")Uploads/Products/unknow.jpg);background-size: contain;">
                                            <div class="image-input-wrapper w-125px h-125px" style="background-image: url(@Configuration.GetValue(typeof(string),"BaseUrl")Uploads/Products/unknow.jpg);background-size: contain;"></div>

                                            <label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" data-bs-dismiss="click" title="Değiştir">
                                                <i class="ki-duotone ki-pencil fs-6">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                </i>

                                                <input type="file" asp-for="Image.File" />
                                                <input type="hidden" name="avatar_remove" />
                                            </label>

                                            <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" data-bs-dismiss="click" title="İptal">
                                                <i class="ki-outline ki-cross fs-3"></i>
                                            </span>

                                           
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <div id="kt_account_settings_deactivate" class="collapse show">
                                        <div class="card-body border-top p-9">

                                            <div class="notice d-flex bg-light-warning rounded border-warning border border-dashed mb-9 p-6">
                                                <i class="ki-duotone ki-information fs-2tx text-warning me-4"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                                <div class="d-flex flex-stack flex-grow-1 ">
                                                    <div class=" fw-semibold">
                                                        <h4 class="text-gray-900 fw-bold">Ürünü Devredışı Olarak Kaydet</h4>

                                                        <div class="fs-6 text-gray-700 ">Aşağıda ki kutucuk <b>işaretlenmediği</b> takdirde eklenecek olan ürün devredışı olarak kaydedilir. Bu ürünün kullanılamayacağı anlamına gelir. Daha sonra ürün liste üzerinden aktifleştirilebilir.<br></div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-check form-check-solid fv-row">
                                                <input asp-for="AddRequestModel.Status" class="form-check-input" type="checkbox" id="deactivate">
                                                <label class="form-check-label fw-semibold ps-2 fs-6" for="deactivate"><b>Aktif</b> olarak işaretle</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <button type="submit" class="btn btn-primary" id="kt_account_profile_details_submit">Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="d-none">
    <input asp-for="ToastrError" />
</div>
<div class="d-none">
    <input asp-for="ToastrSuccess" />
</div>

@section _Foot{
    <script src="~/assets/js/pages/category/category.js"></script>
}