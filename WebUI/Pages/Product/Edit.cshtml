@page "{id:int}"
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model WebUI.Pages.Product.EditModel
@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="app-main flex-column flex-row-fluid " id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 mb-10">
            <div id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                        Ürün Ekle
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            Sayfalar
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">
                            Ürün İşlemleri
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content  flex-column-fluid ">
            <div id="kt_app_content_container" class="app-container  container-xxl ">
                <form class="form d-flex flex-column flex-lg-row" method="post" asp-page-handler="Edit" enctype="multipart/form-data">
                    <input hidden asp-for="UpdateRequestModel.Id" />
                    <input hidden asp-for="UpdateRequestModel.Image" />
                    <div class="d-flex flex-column gap-7 gap-lg-10 w-100 w-lg-300px mb-7 me-lg-10">
                        <div class="card card-flush py-4">
                            <div class="card-header">
                                <div class="card-title">
                                    <h2>Fotoğraf</h2>
                                </div>
                            </div>
                            <div class="card-body text-center pt-0">
                                <div class="image-input image-input-empty image-input-outline mb-3" data-kt-image-input="true" style="background-image: url(@Configuration.GetValue(typeof(string), "BaseUrl")@Model.UpdateRequestModel.Image);background-size: contain;">
                                    <div class="image-input-wrapper w-150px h-150px" style="background-image: url(@Configuration.GetValue(typeof(string), "BaseUrl")@Model.UpdateRequestModel.Image);background-size: contain;"></div>
                                    <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" title="Değiştir">
                                        <i class="ki-duotone ki-pencil fs-7">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                        <input type="file" asp-for="Image.File">
                                        <input type="hidden" name="avatar_remove">
                                    </label>
                                    <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="İptal">
                                        <i class="ki-duotone ki-cross fs-2">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    </span>
                                </div>
                                <div class="text-muted fs-7">Ürün fotoğrafını seçim yaparak ekleyebilirsiniz. Fotoğraf sadece *.png, *.jpg formantında ve 2 MB' dan az olmalıdır.</div>
                            </div>
                        </div>
                        <div class="card card-flush py-4">
                            <div class="card-header">
                                <div class="card-title">
                                    <h2>Durum</h2>
                                </div>
                                <div class="card-toolbar">
                                    <div class="rounded-circle bg-success w-15px h-15px" id="statusCircle"></div>
                                </div>
                            </div>
                            <div class="card-body pt-0">
                                <select asp-for="UpdateRequestModel.Status" class="form-select mb-2" data-control="select2" data-hide-search="true" id="statusSelect">
                                    <option value="true" selected="">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                                <div class="text-muted fs-7">Ürünün pasif olarak seçilmesi, ürünün kullanılamayacağı anlamına gelir. Daha sonra ürün, liste üzerinden aktifleştirilebilir</div>
                            </div>
                        </div>
                        <div class="card card-flush py-4">
                            <div class="card-header">
                                <div class="card-title">
                                    <h2>Favori</h2>
                                </div>
                                <div class="card-toolbar">
                                    <div class="rounded-circle bg-danger w-15px h-15px" id="favoriteCircle"></div>
                                </div>
                            </div>
                            <div class="card-body pt-0">
                                <select asp-for="UpdateRequestModel.Favorite" class="form-select mb-2" data-control="select2" data-hide-search="true" id="favoriteSelect">
                                    <option value="false" selected="">Normal</option>
                                    <option value="true">Favori</option>
                                </select>
                                <div class="text-muted fs-7">Ürünün favori olarak seçilmesi, ürünün hızlı satış alanına ekleneceği anlamına gelir.</div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                        <div class="card card-flush py-4">
                            <div class="card-header">
                                <div class="card-title">
                                    <h2>Ürün Bilgileri</h2>
                                </div>
                            </div>
                            <div class="card-body pt-0">
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Ürün Adı</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="UpdateRequestModel.Name" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="UpdateRequestModel.Name"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Kategori</label>

                                    <div class="col-lg-8 fv-row">
                                        <select asp-for="UpdateRequestModel.CategoryId" asp-items="Model.Options" data-control="select2" class="form-select form-control-lg form-control mb-3 mb-lg-0"></select>
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="UpdateRequestModel.CategoryId"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Alış Fiyatı</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="UpdateRequestModel.PurchasePrice" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="UpdateRequestModel.PurchasePrice"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Satış Fiyatı</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="UpdateRequestModel.SalePrice" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="UpdateRequestModel.SalePrice"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Barkod</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="UpdateRequestModel.Barcode" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="UpdateRequestModel.Barcode"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Stok</label>

                                    <div class="col-lg-8 fv-row">
                                        <input asp-for="UpdateRequestModel.Stock" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                            <span asp-validation-for="UpdateRequestModel.Stock"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <span class="indicator-label">
                                    Kaydet
                                </span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="d-none">
    <input asp-for="ToastrError" />
</div>
<div class="d-none">
    <input asp-for="ToastrSuccess" />
</div>

@section _Foot{
    <script src="~/assets/js/pages/product/product.js"></script>
}