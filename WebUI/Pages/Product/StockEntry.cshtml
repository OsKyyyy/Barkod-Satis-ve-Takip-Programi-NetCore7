@page
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model WebUI.Pages.Product.StockEntryModel
@{
    ViewData["Title"] = "Stok Girişi";
}
<form method="post"></form>
<div class="app-main flex-column flex-row-fluid " id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 mb-10">
            <div id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                        Stok Girişi
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            Ürün
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">
                            Ürün İşlemleri
                        </li>
                    </ul>
                </div>
            </div>
        </div>
		<div id="kt_app_content" class="app-content  flex-column-fluid ">
            <div id="kt_app_content_container" class="app-container  container-xxl d-flex flex-column flex-lg-row ">
                 <div class="d-flex flex-column gap-7 gap-lg-10 w-100 w-lg-300px mb-7 me-lg-10">
                    <div class="card card-flush py-4">
                        <div class="card-header">
                            <div class="card-title">
                                <h2>Fatura Fotoğrafı</h2>
                            </div>
                        </div>
                        <div class="card-body text-center pt-0">
                            <div class="image-input image-input-empty image-input-outline mb-3" data-kt-image-input="true" style="background-image: url(@Configuration.GetValue(typeof(string),"ImageUrl")Uploads/Products/unknow.png);background-size: contain;">
                                <div class="image-input-wrapper w-150px h-150px" style="background-image: url(@Configuration.GetValue(typeof(string),"ImageUrl")Uploads/Products/unknow.png);background-size: contain;"></div>
                                <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" title="Değiştir">
                                    <i class="ki-duotone ki-pencil fs-7">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                    <input id="image" type="file" asp-for="Image.File" accept=".png, .jpg, .jpeg">
                                    <input type="hidden" name="avatar_remove">
                                </label>
                                <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="İptal">
                                    <i class="ki-duotone ki-cross fs-2">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </span>
                            </div>
                            <div class="text-muted fs-7">Fatura fotoğrafını seçim yaparak ekleyebilirsiniz. Fotoğraf sadece *.png, *.jpg formantında ve 2 MB' dan az olmalıdır.</div>
                        </div>
                    </div>                                              
                </div>
                <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                    <div class="flex-lg-row-fluid">
                        <ul class="nav nav-custom nav-tabs nav-line-tabs nav-line-tabs-2x border-0 fs-4 fw-semibold mb-8">
                            <li class="nav-item">
                                <a class="nav-link text-active-primary pb-4 active" data-bs-toggle="tab" href="#kt_wholesaler_and_price_info">Toptancı ve Fiyat Bilgileri</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-active-primary pb-4" data-bs-toggle="tab" href="#kt_product_info">Ürün Bilgileri</a>
                            </li>                 
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="kt_wholesaler_and_price_info" role="tabpanel">
                                <div class="card card-flush">                                   
                                    <div class="card-body">                                        
                                        <div class="row mb-6">
                                            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Toptancı</label>

                                            <div class="col-lg-8 fv-row">
                                                <select id="wholeSalerId" asp-items="Model.Options" data-control="select2" class="form-select form-control-lg form-control mb-3 mb-lg-0"></select>
                                            </div>
                                        </div>

                                        <div class="row mb-6">
                                            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Toplam Maliyet</label>

                                            <div class="col-lg-8 fv-row">
                                                <input id="totalCost" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                            </div>
                                        </div>

                                        <div class="row mb-6">
                                            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Ödenen Tutar</label>

                                            <div class="col-lg-8 fv-row">
                                                <input id="paymentAmount" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off">
                                            </div>
                                        </div>
                                    </div>
                                </div>                               
                            </div>
                            <div class="tab-pane fade" id="kt_product_info" role="tabpanel">
                                <div class="card card-flush">
                                    <div class="card-body">                                        
                                        <div id="czContainer">
                                            <div id="first">
                                                <div class="recordset">
                                                    <div class="fieldRow clearfix">
                                                        <div id="div_id_barcode_1_number" class="row mb-6">
                                                            <label for="id_barcode_1_number" class="col-lg-4 col-form-label required fw-semibold fs-6">Barkod</label>
                                                            <div class="col-lg-8 fv-row">
                                                                <input type="text" name="barcode_1_number" id="id_barcode_1_number" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off" />
                                                            </div>
                                                        </div>     
                                                        <div id="div_id_quantity_1_quantity" class="row mb-6">
                                                            <label for="id_quantity_1_quantity" class="col-lg-4 col-form-label required fw-semibold fs-6">Adet</label>
                                                            <div class="col-lg-8 fv-row">
                                                                <input type="text" name="quantity_1_quantity" id="id_quantity_1_quantity" class="form-control form-control-lg form-control mb-3 mb-lg-0" autocomplete="off" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>                                                                              
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary" onclick="Product.StockEntry()">
                                <span class="indicator-label">
                                    Kaydet
                                </span>
                            </button>
                        </div>
                    </div>
                </div>                                              
 			</div>
		</div>
    </div>
</div>
<div class="d-none">
    <input asp-for="ToastrError" />
</div>
<div class="d-none">
    <input asp-for="ToastrSuccess" />
</div>

@section _Foot{
    <script src="~/assets/js/pages/product/product.js"></script>
    <script src="~/assets/js/custom/jquery.czMore-latest.js"></script>
    <script type="text/javascript">
        //One-to-many relationship plugin by Yasir O. Atabani. Copyrights Reserved.
        $("#czContainer").czMore();
    </script>
}