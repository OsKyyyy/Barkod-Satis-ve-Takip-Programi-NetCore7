                                    <button type="button" class="btn btn-dark numpad-key" onclick="NumPad.SetSymbol('0','addMoneyNumpadInput')">0</button>
                            </td>
                            <td>
                                    <button type="button" class="btn btn-dark numpad-key" onclick="NumPad.SetSymbol('.','addMoneyNumpadInput')">.</button>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-secondary numpad-key numpad-action-button">&#9989;</button>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>
