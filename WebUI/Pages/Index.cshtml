@page
@model IndexModel
@{
    ViewData["Title"] = "Ana Sayfa";
}
<div class="app-main flex-column flex-row-fluid " id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 mb-10">
            <div id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                        Ana Sayfa
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            Ana Sayfa
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">
                            Ana Sayfa
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content  flex-column-fluid ">
            <div id="kt_app_content_container" class="app-container  container-xxl ">
                <div class="row gy-5 g-xl-10">
                    <div class="col-sm-6 col-xl-2 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column">
                                <div class="m-0">
                                    <i class="ki-duotone ki-dropbox fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                        <span class="path4"></span>
                                        <span class="path5"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-gray-800 lh-1 ls-n2">
                                        @{
                                            string stockQuantity;
                                            
                                            if (Model.StockQuantityViewModels.StockQuantity >= 1_000_000)
                                            {
                                                stockQuantity = (Model.StockQuantityViewModels.StockQuantity / 1_000_000D).ToString("0.##") + "M"; // Milyon
                                            }
                                            else if (Model.StockQuantityViewModels.StockQuantity >= 1_000)
                                            {
                                                stockQuantity = (Model.StockQuantityViewModels.StockQuantity / 1_000D).ToString("0.##") + "B"; // Bin
                                            }
                                            else
                                            {
                                                stockQuantity = Model.StockQuantityViewModels.StockQuantity.ToString(); // Bin'den küçükse direkt göster
                                            }
                                        }
                                        @stockQuantity
                                    </span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-6 text-gray-500">
                                            Stok Adedi
                                        </span>
                                    </div>
                                </div>                           
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xl-2 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column">
                                <div class="m-0">
                                    <i class="ki-duotone ki-abstract-39 fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>                                       
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-gray-800 lh-1 ls-n2">
                                        @{
                                            string stockValue;

                                            if (Model.StockValueViewModels.StockValue >= 1_000_000)
                                            {
                                                stockValue = (Model.StockValueViewModels.StockValue / 1_000_000M).ToString("0.##") + "M"; // Milyon
                                            }
                                            else if (Model.StockValueViewModels.StockValue >= 1_000)
                                            {
                                                stockValue = (Model.StockValueViewModels.StockValue / 1_000M).ToString("0.##") + "B"; // Bin
                                            }
                                            else
                                            {
                                                stockValue = Model.StockValueViewModels.StockValue.ToString(); // Bin'den küçükse direkt göster
                                            }
                                        }
                                        @stockValue                                        
                                    </span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-6 text-gray-500">
                                            Stok Değeri
                                        </span>
                                    </div>
                                </div>                         
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xl-2 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column">
                                <div class="m-0">
                                    <i class="ki-duotone ki-dollar fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-gray-800 lh-1 ls-n2">
                                        @{
                                            string salesToday;

                                            if (Model.SalesTodayViewModels.SalesToday >= 1_000_000)
                                            {
                                                salesToday = (Model.SalesTodayViewModels.SalesToday / 1_000_000M).ToString("0.##") + "M"; // Milyon
                                            }
                                            else if (Model.SalesTodayViewModels.SalesToday >= 1_000)
                                            {
                                                salesToday = (Model.SalesTodayViewModels.SalesToday / 1_000M).ToString("0.##") + "B"; // Bin
                                            }
                                            else
                                            {
                                                salesToday = Model.SalesTodayViewModels.SalesToday.ToString(); // Bin'den küçükse direkt göster
                                            }
                                        }
                                        @salesToday                                        
                                    </span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-6 text-gray-500">
                                            Günlük Satış Tutarı
                                        </span>
                                    </div>
                                </div>            
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xl-2 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column">
                                <div class="m-0">
                                    <i class="ki-duotone ki-profile-user fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                        <span class="path4"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-gray-800 lh-1 ls-n2">@Model.TotalUserViewModels.TotalAccount</span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-6 text-gray-500">
                                            Toplam Kullanıcı
                                        </span>
                                    </div>
                                </div>                             
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xl-2 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column">
                                <div class="m-0">
                                    <i class="ki-duotone ki-people fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                        <span class="path4"></span>
                                        <span class="path5"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-gray-800 lh-1 ls-n2">@Model.TotalCustomerViewModels.TotalAccount</span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-6 text-gray-500">
                                            Toplam Müşteri
                                        </span>
                                    </div>
                                </div>                        
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xl-2 mb-xl-10">
                        <div class="card h-lg-100">
                            <div class="card-body d-flex justify-content-between align-items-start flex-column">
                                <div class="m-0">
                                    <i class="ki-duotone ki-truck fs-2hx text-gray-600">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                        <span class="path4"></span>
                                        <span class="path5"></span>
                                    </i>
                                </div>
                                <div class="d-flex flex-column my-7">
                                    <span class="fw-semibold fs-3x text-gray-800 lh-1 ls-n2">@Model.TotalWholeSalerViewModels.TotalAccount</span>
                                    <div class="m-0">
                                        <span class="fw-semibold fs-6 text-gray-500">
                                            Toplam Toptancı
                                        </span>
                                    </div>
                                </div>                      
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
